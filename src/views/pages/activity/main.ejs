<div class="space-y-8">
  <!-- Header -->
  <section class="bg-card border border-border rounded-3xl p-6 shadow-sm">
    <div class="flex flex-col xl:flex-row xl:items-center xl:justify-between gap-6">
      <div class="space-y-3">
        <p class="text-xs uppercase tracking-[0.35em] text-muted">Activity monitor</p>
        <h1 class="text-3xl md:text-4xl font-semibold text-primary leading-tight">Journal en direct de vos newsletters</h1>
        <p class="text-muted max-w-2xl text-sm md:text-base">
          Vue consolidée des derniers envois, incidents et actions correctives.
        </p>
      </div>
      <div class="flex flex-wrap gap-3">
        <button class="px-4 py-2 rounded-xl border border-border text-sm font-semibold text-muted hover:text-primary hover:border-primary transition">
          Exporter le journal
        </button>
        <button class="px-4 py-2 rounded-xl bg-primary text-white text-sm font-semibold hover:bg-primary/90 transition">
          Ajouter une note
        </button>
      </div>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-4 gap-4 mt-8">
      <article class="rounded-2xl bg-[#111113] text-white p-5">
        <p class="text-xs uppercase tracking-widest text-white/60">Newsletters Actives</p>
        <p class="text-3xl font-semibold mt-2"><%= stats.active %></p>
        <p class="text-white/60 text-sm mt-1">en cours</p>
      </article>
      <article class="rounded-2xl border border-border p-5">
        <p class="text-xs uppercase tracking-widest text-muted">Total</p>
        <p class="text-3xl font-semibold mt-2"><%= stats.total %></p>
        <p class="text-muted text-sm mt-1">newsletters</p>
      </article>
      <article class="rounded-2xl border border-border p-5">
        <p class="text-xs uppercase tracking-widest text-muted">Taux moyen</p>
        <p class="text-3xl font-semibold mt-2"><%= stats.avgOpenRate.toFixed(1) %>%</p>
        <p class="text-muted text-sm mt-1">taux d'ouverture</p>
      </article>
      <article class="rounded-2xl border border-border p-5">
        <p class="text-xs uppercase tracking-widest text-muted">Abonnés totaux</p>
        <p class="text-3xl font-semibold mt-2"><%= stats.totalSubscribers %></p>
        <p class="text-muted text-sm mt-1">tous canaux</p>
      </article>
    </div>
  </section>

  <!-- Newsletters Table -->
  <section class="bg-card border border-border rounded-3xl p-6 shadow-sm">
    <div class="flex items-center justify-between mb-6">
      <div>
        <h2 class="text-2xl font-semibold">Suivi des newsletters</h2>
        <p class="text-muted text-sm">Toutes vos newsletters et leur statut</p>
      </div>
      <div class="flex flex-wrap gap-2">
        <button class="px-4 py-2 rounded-xl border border-border text-sm text-muted hover:text-primary hover:border-primary transition">Télécharger CSV</button>
        <button class="px-4 py-2 rounded-xl bg-primary text-white text-sm font-semibold hover:bg-primary/90 transition">Synchroniser CRM</button>
      </div>
    </div>
    <div class="overflow-x-auto">
      <table class="min-w-full text-sm">
        <thead>
          <tr class="text-muted border-b border-border">
            <th class="text-left py-3 font-medium">Newsletter</th>
            <th class="text-left py-3 font-medium">Abonnés</th>
            <th class="text-left py-3 font-medium">Taux ouverture</th>
            <th class="text-left py-3 font-medium">Statut</th>
            <th class="text-right py-3 font-medium">Actions</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-border">
          <% newsletters.forEach(newsletter => { %>
            <tr>
              <td class="py-4">
                <p class="font-semibold text-primary"><%= newsletter.name %></p>
                <p class="text-muted text-xs"><%= newsletter.description %></p>
              </td>
              <td class="py-4"><%= newsletter.subscribers %></td>
              <td class="py-4">
                <span class="font-semibold text-<%= newsletter.openRate > 30 ? 'success' : 'primary' %>"><%= newsletter.openRate %>%</span>
              </td>
              <td class="py-4">
                <span class="px-3 py-1 rounded-full border border-border text-xs">
                  <%= newsletter.status === 'active' ? 'Stable' : newsletter.status %>
                </span>
              </td>
              <td class="py-4 text-right">
                <a href="/newsletters/<%= newsletter.id %>" class="text-primary font-semibold hover:underline">Détails</a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </section>
</div>

