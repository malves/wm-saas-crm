<!-- Page Header -->
<div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4 mb-8">
  <div>
    <p class="text-sm text-muted">Abonnés</p>
    <h1 class="text-3xl font-bold">Liste des abonnés</h1>
    <p class="text-muted text-sm mt-2">Gérez votre base d'abonnés et leurs préférences.</p>
  </div>
  <div class="flex flex-wrap items-center gap-3">
    <button class="px-4 py-2 rounded-xl border border-border text-muted hover:text-primary hover:border-primary transition text-sm font-semibold">
      Exporter CSV
    </button>
    <a href="/subscribers/create" class="px-4 py-2 rounded-xl bg-primary text-white font-semibold hover:bg-primary/90 transition">
      Ajouter un abonné
    </a>
  </div>
</div>

<!-- Stats Cards -->
<div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
  <div class="bg-card rounded-2xl p-6 border border-border">
    <p class="text-xs uppercase tracking-widest text-muted mb-2">Total</p>
    <p class="text-3xl font-bold"><%= stats.total %></p>
    <p class="text-sm text-muted mt-1">abonnés</p>
  </div>
  <div class="bg-card rounded-2xl p-6 border border-border">
    <p class="text-xs uppercase tracking-widest text-muted mb-2">Activité</p>
    <p class="text-3xl font-bold text-success"><%= stats.active %></p>
    <p class="text-sm text-muted mt-1">actifs 30 jours</p>
  </div>
  <div class="bg-card rounded-2xl p-6 border border-border">
    <p class="text-xs uppercase tracking-widest text-muted mb-2">Activité</p>
    <p class="text-3xl font-bold text-muted"><%= stats.inactive %></p>
    <p class="text-sm text-muted mt-1">actifs 90 jours</p>
  </div>
</div>

<!-- Subscribers Table -->
<div class="bg-card rounded-2xl border border-border shadow-sm overflow-hidden">
  <div class="overflow-x-auto">
    <table class="w-full">
      <thead>
        <tr class="text-muted text-sm border-b border-border bg-background/50">
          <th class="text-left px-6 py-4 font-medium">Nom</th>
          <th class="text-left px-6 py-4 font-medium">Email</th>
          <th class="text-left px-6 py-4 font-medium">Newsletters</th>
          <th class="text-left px-6 py-4 font-medium">Statut</th>
          <th class="text-right px-6 py-4 font-medium">Actions</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-border">
        <% subscribers.forEach(subscriber => { %>
          <tr class="hover:bg-background/30 transition">
            <td class="px-6 py-4">
              <p class="font-semibold"><%= subscriber.name %></p>
            </td>
            <td class="px-6 py-4">
              <p class="text-muted"><%= subscriber.email %></p>
            </td>
            <td class="px-6 py-4">
              <p class="text-sm"><%= subscriber.subscribedNewsletters ? subscriber.subscribedNewsletters.length : 0 %> newsletter(s)</p>
            </td>
            <td class="px-6 py-4">
              <span class="px-3 py-1 rounded-full text-xs font-medium <%= subscriber.status === 'active' ? 'bg-success/10 text-success' : 'bg-muted/10 text-muted' %>">
                <%= subscriber.status === 'active' ? 'Actif' : 'Inactif' %>
              </span>
            </td>
            <td class="px-6 py-4 text-right">
              <form method="POST" action="/subscribers/<%= subscriber.id %>/delete" onsubmit="return confirm('Supprimer cet abonné ?')" class="inline">
                <button type="submit" class="text-danger hover:underline text-sm font-semibold">
                  Supprimer
                </button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>

<% if (subscribers.length === 0) { %>
  <div class="text-center py-12 bg-card rounded-2xl border border-border">
    <svg class="w-16 h-16 text-muted mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"/>
    </svg>
    <p class="text-muted mb-4">Aucun abonné trouvé</p>
    <a href="/subscribers/create" class="inline-block px-6 py-3 bg-primary text-white rounded-xl font-semibold hover:bg-primary/90 transition">
      Ajouter votre premier abonné
    </a>
  </div>
<% } %>

