<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
  <!-- Left Column (2/3) -->
  <div class="lg:col-span-2 space-y-6">
    <!-- Hero Section -->
    <section class="relative bg-primary rounded-3xl p-8 md:p-12 overflow-hidden">
      <div class="relative z-10">
        <h1 class="text-3xl md:text-4xl font-bold mb-4 max-w-md text-white">Manage Your Newsletters & CRM</h1>
        <p class="text-white/60 mb-6 max-w-sm">Powerful tools to grow your audience and automate your communications</p>
        <div class="flex flex-wrap gap-4">
          <a href="/newsletters/create" class="bg-white text-primary px-6 py-3 rounded-xl font-semibold hover:bg-gray-100 transition">
            Create Newsletter
          </a>
          <a href="/subscribers/create" class="border border-white/30 text-white px-6 py-3 rounded-xl font-semibold hover:bg-white/10 transition">
            Import Contacts
          </a>
        </div>
      </div>
      <!-- Decorative Elements -->
      <div class="absolute right-0 top-0 bottom-0 w-1/2 opacity-20">
        <div class="absolute right-10 top-10 w-32 h-32 bg-white/30 rounded-2xl rotate-12"></div>
        <div class="absolute right-20 bottom-10 w-24 h-24 bg-white/20 rounded-full"></div>
        <div class="absolute right-40 top-20 w-16 h-16 bg-white/10 rounded-xl -rotate-12"></div>
      </div>
    </section>

    <!-- Active Newsletters Section -->
    <section>
      <div class="flex items-center justify-between mb-6">
        <h2 class="text-xl font-bold">Latest Active Newsletters</h2>
        <a href="/newsletters" class="text-muted text-sm hover:text-primary transition">See All</a>
      </div>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
        <% newsletters.sort((a, b) => new Date(b.createdAt) - new Date(a.createdAt)).slice(0, 3).forEach((newsletter, index) => {
          const colors = ['red', 'blue', 'green'];
          const color = colors[index % 3];
        %>
          <!-- Newsletter Card <%= index + 1 %> -->
          <div class="bg-card rounded-2xl p-4 shadow-sm hover:shadow-md transition">
            <div class="relative mb-4">
              <div class="aspect-square rounded-xl overflow-hidden relative bg-<%= color %>-50 flex items-center justify-center">
                <div class="text-center">
                  <div class="text-<%= color %>-600 font-black text-xl mb-1"><%= newsletter.name.toUpperCase() %></div>
                  <div class="w-12 h-1 bg-<%= color %>-600 mx-auto rounded-full"></div>
                </div>
              </div>
              <div class="absolute top-3 left-3 bg-white/90 backdrop-blur px-3 py-1 rounded-lg text-sm font-medium text-primary">
                <%= newsletter.subscribers %> sent
              </div>
            </div>
            <h3 class="font-semibold mb-1"><%= newsletter.name %></h3>
            <p class="text-muted text-sm mb-3">Open rate</p>
            <div class="flex items-center justify-between">
              <span class="font-bold text-lg text-success"><%= newsletter.openRate %>%</span>
              <a href="/newsletters/<%= newsletter.id %>" class="bg-primary hover:bg-primary/90 text-white px-4 py-2 rounded-xl text-sm font-semibold transition">
                VIEW STATS
              </a>
            </div>
          </div>
        <% }) %>
      </div>
    </section>

    <!-- Top Performing Newsletters Section -->
    <section>
      <div class="flex items-center justify-between mb-6">
        <h2 class="text-xl font-bold">Top Performing Newsletters</h2>
        <a href="/newsletters" class="text-muted text-sm hover:text-primary transition">See All</a>
      </div>
      <div class="bg-card rounded-2xl overflow-hidden shadow-sm">
        <table class="w-full">
          <thead>
            <tr class="text-muted text-sm border-b border-border">
              <th class="text-left px-4 py-4 font-medium">Newsletter Name</th>
              <th class="text-left px-4 py-4 font-medium hidden sm:table-cell">Subscribers</th>
              <th class="text-left px-4 py-4 font-medium hidden md:table-cell">Open Rate</th>
              <th class="text-left px-4 py-4 font-medium hidden lg:table-cell">Status</th>
              <th class="text-left px-4 py-4 font-medium">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% newsletters.sort((a, b) => (b.openRate || 0) - (a.openRate || 0)).slice(0, 5).forEach((newsletter, index) => {
              const colors = ['red', 'blue', 'green', 'purple', 'orange'];
              const color = colors[index % 5];
            %>
              <tr class="border-b border-border/50 hover:bg-background/50 transition">
                <td class="px-4 py-4">
                  <div class="flex items-center gap-3">
                    <div class="w-12 h-12 min-w-[48px] min-h-[48px] bg-<%= color %>-50 rounded-xl flex items-center justify-center hidden sm:flex">
                      <div class="text-center">
                        <div class="text-<%= color %>-600 font-black text-sm"><%= newsletter.name.charAt(0).toUpperCase() %></div>
                      </div>
                    </div>
                    <div>
                      <p class="font-semibold"><%= newsletter.name %></p>
                      <p class="text-muted text-sm hidden lg:block"><%= newsletter.description.substring(0, 50) %>...</p>
                    </div>
                  </div>
                </td>
                <td class="px-4 py-4 hidden sm:table-cell">
                  <div class="flex items-center gap-1">
                    <svg class="w-4 h-4 text-blue-500" viewBox="0 0 24 24" fill="currentColor">
                      <path d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"/>
                    </svg>
                    <span class="font-medium"><%= newsletter.subscribers %></span>
                  </div>
                </td>
                <td class="px-4 py-4 text-success font-medium hidden md:table-cell"><%= newsletter.openRate %>%</td>
                <td class="px-4 py-4 hidden lg:table-cell">
                  <span class="bg-success/10 text-success px-2 py-1 rounded-full text-xs font-medium"><%= newsletter.status %></span>
                </td>
                <td class="px-4 py-4">
                  <div class="relative inline-block">
                    <button
                      type="button"
                      class="text-gray-500 hover:text-blue-600 p-2 rounded-lg hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-primary/20"
                      onclick="toggleActionMenu(this, event)"
                    >
                      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M6 10a2 2 0 11-4 0 2 2 0 014 0zM12 10a2 2 0 11-4 0 2 2 0 014 0zM16 12a2 2 0 100-4 2 2 0 000 4z"/>
                      </svg>
                    </button>
                    <div class="action-menu absolute right-0 top-full mt-1 w-40 bg-white border border-gray-200 rounded-lg shadow-lg z-[9999]" style="display:none;">
                      <a href="/newsletters/<%= newsletter.id %>" class="flex items-center gap-2 px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 rounded-lg">
                        <svg class="w-4 h-4 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
                        </svg>
                        View Stats
                      </a>
                    </div>
                  </div>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </section>

  </div>

  <!-- Right Column (1/3) - Latest Newsletters Sent -->
  <div class="lg:col-span-1">
    <section class="bg-card rounded-2xl p-6 shadow-sm sticky top-8">
      <div class="flex items-center justify-between mb-6">
        <h2 class="text-xl font-bold">Latest Newsletters Sent</h2>
        <a href="/newsletters" class="text-muted text-sm hover:text-primary transition">See All</a>
      </div>
      <div class="space-y-3">
        <% newsletters.forEach(newsletter => { %>
          <!-- Newsletter -->
          <div class="bg-background rounded-lg p-3 border border-border hover:border-primary/30 transition">
            <div class="flex items-center justify-between">
              <div class="flex items-center gap-3">
                <div class="w-8 h-8 bg-gray-100 rounded-lg flex items-center justify-center">
                  <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5.882V19.24a1.76 1.76 0 01-3.417.592l-2.147-6.15M18 13a3 3 0 100-6M5.436 13.683A4.001 4.001 0 017 6h1.832c4.1 0 7.625-1.234 9.168-3v14c-1.543-1.766-5.067-3-9.168-3H7a3.988 3.988 0 01-1.564-.317z"/>
                  </svg>
                </div>
                <div>
                  <p class="font-semibold text-sm"><%= newsletter.name %></p>
                  <p class="text-muted text-xs"><%= newsletter.subscribers %> subs • <%= newsletter.openRate %>% open • Weekly</p>
                </div>
              </div>
              <div class="text-right">
                <span class="bg-success/10 text-success px-2 py-0.5 rounded-full text-xs font-medium mb-1 inline-block">Active</span>
                <p class="text-xs text-muted">2d ago</p>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    </section>
  </div>
</div>
