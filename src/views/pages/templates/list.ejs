<div class="max-w-7xl mx-auto space-y-6">
  <!-- Header -->
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-3xl font-bold mb-2">Templates</h1>
      <p class="text-muted">Créez et gérez vos templates d'emails</p>
    </div>
    <% if (templates.length > 0) { %>
      <a href="/templates/create" class="bg-primary text-white px-6 py-3 rounded-xl font-semibold hover:bg-primary/90 transition">
        <span class="flex items-center gap-2">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
          </svg>
          Nouveau template
        </span>
      </a>
    <% } %>
  </div>

  <% if (templates.length === 0) { %>
    <!-- Empty State -->
    <section class="relative bg-primary rounded-3xl p-8 md:p-12 overflow-hidden">
      <div class="relative z-10">
        <h2 class="text-3xl md:text-4xl font-bold mb-4 max-w-md text-white">Créez des emails magnifiques</h2>
        <p class="text-white/60 mb-6 max-w-sm">Utilisez notre builder intuitif pour créer des templates d'emails professionnels et responsive</p>
        <div class="flex flex-wrap gap-4">
          <a href="/templates/create" class="bg-white text-primary px-6 py-3 rounded-xl font-semibold hover:bg-gray-100 transition">
            Crée ton premier template !
          </a>
        </div>
      </div>
      <!-- Decorative Elements -->
      <div class="absolute right-0 top-0 bottom-0 w-1/2 opacity-20">
        <div class="absolute right-10 top-10 w-32 h-32 bg-white/30 rounded-2xl rotate-12"></div>
        <div class="absolute right-20 bottom-10 w-24 h-24 bg-white/20 rounded-full"></div>
        <div class="absolute right-40 top-20 w-16 h-16 bg-white/10 rounded-xl -rotate-12"></div>
      </div>
    </section>
  <% } else { %>
    <!-- Templates Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      <% templates.forEach((template) => { %>
        <div class="bg-card rounded-2xl shadow-sm hover:shadow-md transition overflow-hidden">
          <!-- Thumbnail/Preview -->
          <div class="aspect-video bg-gradient-to-br from-primary/10 to-primary/5 flex items-center justify-center border-b border-border">
            <svg class="w-16 h-16 text-primary/30" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
            </svg>
          </div>
          
          <!-- Content -->
          <div class="p-5">
            <h3 class="font-bold text-lg mb-2"><%= template.name %></h3>
            <% if (template.description) { %>
              <p class="text-muted text-sm mb-4 line-clamp-2"><%= template.description %></p>
            <% } %>
            
            <!-- Meta -->
            <div class="flex items-center gap-2 text-xs text-muted mb-4">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              <%= new Date(template.createdAt).toLocaleDateString('fr-FR') %>
            </div>
            
            <!-- Actions -->
            <div class="flex gap-2">
              <a href="/templates/<%= template.id %>/edit" class="flex-1 bg-primary text-white px-4 py-2 rounded-lg text-sm font-semibold hover:bg-primary/90 transition text-center">
                Éditer
              </a>
              <form action="/templates/<%= template.id %>/duplicate" method="POST" class="inline">
                <button type="submit" class="px-4 py-2 rounded-lg text-sm font-semibold border border-border hover:bg-muted/10 transition">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"/>
                  </svg>
                </button>
              </form>
              <form action="/templates/<%= template.id %>/delete" method="POST" class="inline" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce template ?')">
                <button type="submit" class="px-4 py-2 rounded-lg text-sm font-semibold text-danger hover:bg-danger/10 transition">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                  </svg>
                </button>
              </form>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  <% } %>
</div>
