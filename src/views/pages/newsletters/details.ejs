<%
  const statusLabels = {
    active: 'Active',
    draft: 'Brouillon',
    paused: 'En pause',
    archived: 'Archivée'
  };
  const statusLabel = statusLabels[newsletter.status] || (newsletter.status || 'Indéterminé');
  const formatNumber = (value) => {
    const num = Number(value);
    if (Number.isNaN(num)) return value || 0;
    return num.toLocaleString('fr-FR');
  };
  const subscribers = Number(newsletter.subscribers) || 0;
  const openRate = Number(newsletter.openRate) || 0;
  const clickRate = Number((openRate * 0.27).toFixed(1));
  const subscriberGrowth = Math.max(1, Math.round(subscribers * 0.018));
  const healthScore = (openRate ? Math.min(10, (openRate / 8) + 6.3) : 8.2).toFixed(1);
  const clickWidthStyle = `style="width:${Math.min(100, openRate * 2)}%;"`;
  
  // Données 15 jours
  const performanceLabels15 = ['Sam', 'Dim', 'Lun', 'Mar', 'Mer', 'Jeu', 'Ven'];
  const performanceVolumes15 = [860, 1020, 1380, 2450, 980, 1560, 2450];
  const lineAdjustments15 = [-1.4, -0.3, 0.7, 1.8, -0.6, 0.9, 1.4];
  
  // Données 7 jours (sous-ensemble avec variations)
  const performanceLabels7 = ['Lun', 'Mar', 'Mer', 'Jeu', 'Ven', 'Sam', 'Dim'];
  const performanceVolumes7 = [1200, 2100, 890, 1450, 2300, 1650, 980];
  const lineAdjustments7 = [0.5, 1.6, -0.8, 0.7, 1.3, 0.2, -0.5];
  
  const lineBaseline = openRate || 32;
  const performanceLine15 = lineAdjustments15.map(adj => Math.max(0, Number((lineBaseline + adj).toFixed(1))));
  const performanceLine7 = lineAdjustments7.map(adj => Math.max(0, Number((lineBaseline + adj).toFixed(1))));
  
  const peakVolume15 = Math.max(...performanceVolumes15);
  const peakVolumeDay15 = performanceLabels15[performanceVolumes15.indexOf(peakVolume15)];
  const bestLine15 = Math.max(...performanceLine15);
  const bestLineDay15 = performanceLabels15[performanceLine15.indexOf(bestLine15)];
  const avgLine15 = (performanceLine15.reduce((acc, value) => acc + value, 0) / performanceLine15.length).toFixed(1);
  
  const peakVolume7 = Math.max(...performanceVolumes7);
  const peakVolumeDay7 = performanceLabels7[performanceVolumes7.indexOf(peakVolume7)];
  const bestLine7 = Math.max(...performanceLine7);
  const bestLineDay7 = performanceLabels7[performanceLine7.indexOf(bestLine7)];
  const avgLine7 = (performanceLine7.reduce((acc, value) => acc + value, 0) / performanceLine7.length).toFixed(1);
  
  const performanceChartData = {
    period7: {
      labels: performanceLabels7,
      bars: performanceVolumes7,
      line: performanceLine7,
      peakVolume: peakVolume7,
      peakVolumeDay: peakVolumeDay7,
      bestLine: bestLine7,
      bestLineDay: bestLineDay7,
      avgLine: avgLine7
    },
    period15: {
      labels: performanceLabels15,
      bars: performanceVolumes15,
      line: performanceLine15,
      peakVolume: peakVolume15,
      peakVolumeDay: peakVolumeDay15,
      bestLine: bestLine15,
      bestLineDay: bestLineDay15,
      avgLine: avgLine15
    }
  };
  const createdAt = newsletter.createdAt ? new Date(newsletter.createdAt).toLocaleDateString('fr-FR') : '—';
  const updatedAt = newsletter.updatedAt ? new Date(newsletter.updatedAt).toLocaleDateString('fr-FR') : '—';
  const timelineBlocks = [
    { time: '06h12', title: 'Hero macro + billet radio', desc: 'Image noir et blanc, CTA inversé.', completion: '74%' },
    { time: '06h18', title: 'Marchés & data', desc: 'Graphiques greyscale · CAC / Nasdaq.', completion: '31%' },
    { time: '06h25', title: 'Culture & agenda', desc: 'Double colonne magazine + push audio.', completion: '19%' }
  ];
  const audienceSegments = [
    { label: 'Cadres supérieurs', detail: 'Finance · Droit · Conseil', share: '42%' },
    { label: 'Décideurs publics', detail: 'Ministères · Collectivités', share: '27%' },
    { label: 'Passionnés actu', detail: 'Abonnement numérique', share: '19%' },
    { label: 'Premium culture', detail: 'Arts · Lifestyle', share: '12%' }
  ];
  const operations = [
    { name: 'Le Figaro · Briefing matin', info: 'Séquence automation + A/B test', status: 'Stable', action: 'Optimisation CTA (05h10)', owner: 'Louis', cta: 'Ouvrir' },
    { name: 'Les Échos · Brief Eco', info: 'Campagne du matin', status: 'À surveiller', action: 'Délivrabilité monitorée (04h32)', owner: 'Camille', cta: 'Détails' },
    { name: 'BFMTV · Flash info', info: 'Alerting breaking news', status: 'Incident', action: 'IP Warm-02 bloquée (06h42)', owner: 'Julien', cta: "Plan d'action" },
    { name: 'Culture+ · Curations soir', info: 'Template premium + audio', status: 'En prod', action: 'CTA mis à jour (05h55)', owner: 'Anaïs', cta: 'Historique' }
  ];
  const team = [
    { label: 'Équipe', name: 'Camille · Owner', desc: 'Rédaction en chef · arbitrage quotidien.' },
    { label: 'CRM', name: 'Louis · Growth', desc: 'Monitoring délivrabilité + VIP.' },
    { label: 'Design', name: 'Anaïs · Template', desc: 'Garde-fous monochromes.' },
    { label: 'Data', name: 'Julien · IA', desc: 'Score attention & insights.' }
  ];
%>

