<!-- Header -->
<div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4 mb-8">
  <div>
    <div class="text-sm text-muted mb-1">Newsletters / Modifier</div>
    <h1 class="text-2xl md:text-3xl font-bold">Modifier <%= newsletter.name %></h1>
  </div>
</div>

<!-- Flash messages -->
<%- include('../../partials/flash') %>

<!-- Form -->
<div class="bg-card rounded-2xl p-6 md:p-8 shadow-sm border border-border">
  <form method="POST" action="/newsletters/<%= newsletter.id %>/edit" class="space-y-6">
    <div class="space-y-2">
      <label class="block text-sm font-semibold text-primary">Nom de la newsletter *</label>
      <input 
        type="text" 
        name="name" 
        value="<%= newsletter.name %>"
        placeholder="Ex: Le Figaro - Briefing matin" 
        class="w-full bg-background border border-border rounded-xl px-4 py-3 outline-none focus:border-primary focus:ring-2 focus:ring-primary/10 text-primary placeholder:text-muted"
        required
      >
    </div>

    <div class="space-y-2">
      <label class="block text-sm font-semibold text-primary">Description *</label>
      <textarea 
        name="description" 
        placeholder="Décrivez votre newsletter"
        rows="3"
        class="w-full bg-background border border-border rounded-xl px-4 py-3 outline-none focus:border-primary focus:ring-2 focus:ring-primary/10 text-primary placeholder:text-muted resize-none"
        required
      ><%= newsletter.description %></textarea>
    </div>

    <div class="space-y-2">
      <label class="block text-sm font-semibold text-primary">Statut</label>
      <select 
        name="status" 
        class="w-full bg-background border border-border rounded-xl px-4 py-3 outline-none focus:border-primary focus:ring-2 focus:ring-primary/10 text-primary"
      >
        <option value="draft" <%= newsletter.status === 'draft' ? 'selected' : '' %>>Brouillon</option>
        <option value="active" <%= newsletter.status === 'active' ? 'selected' : '' %>>Active</option>
        <option value="paused" <%= newsletter.status === 'paused' ? 'selected' : '' %>>En pause</option>
      </select>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div class="space-y-2">
        <label class="block text-sm font-semibold text-primary">Nombre d'abonnés</label>
        <input 
          type="number" 
          name="subscribers" 
          value="<%= newsletter.subscribers %>"
          class="w-full bg-background border border-border rounded-xl px-4 py-3 outline-none focus:border-primary focus:ring-2 focus:ring-primary/10 text-primary"
        >
      </div>

      <div class="space-y-2">
        <label class="block text-sm font-semibold text-primary">Taux d'ouverture (%)</label>
        <input 
          type="number" 
          name="openRate" 
          value="<%= newsletter.openRate %>"
          step="0.1"
          min="0"
          max="100"
          class="w-full bg-background border border-border rounded-xl px-4 py-3 outline-none focus:border-primary focus:ring-2 focus:ring-primary/10 text-primary"
        >
      </div>
    </div>

    <div class="flex items-center gap-3 pt-4">
      <a href="/newsletters/<%= newsletter.id %>" class="px-6 py-3 rounded-xl border border-border text-muted hover:text-primary hover:border-primary transition font-semibold">
        Annuler
      </a>
      <button type="submit" class="flex-1 px-6 py-3 rounded-xl bg-primary text-white font-semibold hover:bg-primary/90 transition">
        Enregistrer les modifications
      </button>
    </div>
  </form>
</div>

